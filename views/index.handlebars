<div class="indexBody">
    <div class="comment-form">
      <div class="col-sm-4">
        <form action="/comment/new" method="post">
          <legend id="new">type a new comment!</legend>
          <div class="form-group">
              <label for="comment-content"></label>
              <input type="text" name="content" class="form-control" id="comment-content" rows="1" placeholder="type here">
          </div>
          <div class='text-right'>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <div class="comments">
        {{#each comments}}
            {{> comment comment=this}}
        {{/each}}
    </div>
</div>
